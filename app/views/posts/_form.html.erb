<%= form_for post do |f| %>
  <div>
    Title: <%= f.text_field :title %><br>
    Content: <%= f.text_area :content %>
  </div>

  <div>
    Category: <%= f.collection_check_boxes :category_ids, Category.all, :id, :name %><br>
    New Category: <%= f.fields_for :categories, post.categories.build do |categories_fields| %>
      <%= categories_fields.text_field :name %>
    <% end %>
  </div>

  <%= f.submit %>
<% end %>